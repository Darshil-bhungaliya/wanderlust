<% layout("/layouts/boilerplate.ejs") -%>

    <h3 class="mt-5">Create New Listing</h3>
    <div class="row">
        <div class="col-8">
            <form method="post" action="/listings" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="listing[title]" type="text" class="form-control" placeholder="Add a catchy title"
                        required>
                    <div class="valid-feedback">Titles Looks Good</div>
                    <div class="invalid-feedback">Please Enter a valid Title</div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" type="text" class="form-control" required></textarea>
                    <div class="invalid-feedback">Please Enter a Short Description</div>

                </div>
                <div>
                    <label for="image" class="form-label">Image</label>
                    <input name="listing[image][url]" type="text" class="form-control" placeholder="Enter Image URL/Link">

                </div>
                <div>
                    <label for="price" class="form-label">Price</label>
                    <input name="listing[price]" type="text" class="form-control" placeholder="1200" required>
                    <div class="invalid-feedback">Please Enter a valid Price</div>

                </div>
                <div class="row">
                    <div class="md-3 col-md-4">
                        <label for="location" class="form-label">Location</label>
                        <input name="listing[location]" type="text" class="form-control" placeholder="India" required>
                        <div class="invalid-feedback">Please Enter a valid Location</div>

                    </div>
                    <div class="md-3 col-md-8">
                        <label for="country" class="form-label">country</label>
                        <input name="listing[country]" type="text" class="form-control" placeholder="Jaipur,Rajasthan"
                            required>
                        <div class="invalid-feedback">Please Enter a valid Country</div>

                    </div>
                </div>
                <br>
                <button class="btn btn-dark add-btn mt-3">Add</button>
            </form>
        </div>
    </div>